<Window x:Class="projekt_bazy.ShowMessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projekt_bazy"
        mc:Ignorable="d"
        Title="ShowMessWindow" Height="400" Width="300">
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

        <Label x:Name="label" Content="Wybierz wiadomości z danego pokoju:" HorizontalAlignment="Center"  VerticalAlignment="Center" Grid.Row="0" Height="30"  Width="270"/>
        <Button x:Name="Back" Content="Powrót" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="200" Height="30" Click="BackClick"/>
        <DataGrid x:Name="dataGrid" IsReadOnly="True" HorizontalAlignment="Center" Grid.Row="1" Height="250" VerticalAlignment="Center" Width="250" MouseDoubleClick="dataGrid_MouseDoubleClick"/>
    </Grid>
</Window>
